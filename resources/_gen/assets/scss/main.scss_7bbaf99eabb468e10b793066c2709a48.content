.home-container {
  padding: 2rem 5%;
  /* Adds margins on the left and right */ }

.hero {
  text-align: center;
  margin-bottom: 3rem; }

.content-sections {
  display: flex;
  flex-direction: column;
  gap: 3rem;
  /* Even spacing between rows */ }

.content-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem; }

.content-text {
  flex: 1;
  font-size: 1.2rem;
  line-height: 1.6; }

.content-image img {
  flex: 1;
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); }
